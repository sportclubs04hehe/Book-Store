@model Product

<div class="container">
    <h1 class="text-uppercase py-4">Create category</h1>
</div>

<form method="post" asp-controller="Product" asp-action="Create">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input type="text" asp-for=Title class="form-control" placeholder="Enter Title...">
        <span class="text-danger fst-italic" asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="Author"></label>
        <input type="text" asp-for=Author class="form-control" placeholder="Enter Author...">
        <span class="text-danger fst-italic" asp-validation-for="Author"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea rows="5" cols="10" asp-for=Author class="form-control" placeholder="Display Order "> </textarea>
    </div>

    <div class="form-group">
        <label asp-for="IBSN"></label>
        <input type="text" asp-for=IBSN class="form-control" placeholder="Enter IBSN...">
        <span class="text-danger fst-italic" asp-validation-for="IBSN"></span>
    </div>

    <div class="form-group">
        <label asp-for="ListPrice"></label>
        <input type="number" asp-for=ListPrice class="form-control" placeholder="Enter List Price...">
        <span class="text-danger fst-italic" asp-validation-for="ListPrice"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="number" asp-for=Price class="form-control" placeholder="Enter Price...">
        <span class="text-danger fst-italic" asp-validation-for="Price"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price50"></label>
        <input type="number" asp-for=ListPrice class="form-control" placeholder="Enter List Price...">
        <span class="text-danger fst-italic" asp-validation-for="ListPrice"></span>
    </div>

    <div class="form-group">
        <label asp-for="ListPrice"></label>
        <input type="number" asp-for=ListPrice class="form-control" placeholder="Enter List Price...">
        <span class="text-danger fst-italic" asp-validation-for="ListPrice"></span>
    </div>


    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark mt-3 w-100" asp-controller="Product" asp-action="Index"><i class="bi bi-skip-backward"></i> Back </a>
        </div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-success w-100 mt-3">Submit</button>
        </div>
    </div>

</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
        }