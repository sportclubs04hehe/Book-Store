@model Category

<div class="container">
    <h1 class="text-uppercase py-4">Delete category</h1>
</div>

<form method="post" asp-controller="Category" asp-action="Delete">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for=Name class="form-control" disabled placeholder="Name">
    </div>

    <div class="form-group">
        <label asp-for="DisplayOrder"></label>
        <input type="number" asp-for=DisplayOrder class="form-control" disabled placeholder="Display Order ">
    </div>

    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark mt-3 w-100" asp-controller="Category" asp-action="Index"><i class="bi bi-skip-backward"></i> Back </a>
        </div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-success w-100 mt-3">Delete</button>
        </div>
    </div>

</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
        }